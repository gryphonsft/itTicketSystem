@{
    Layout = "_Layout";
}
<div class=" ml-2 bg-light rounded-lg p-4 " style="max-width: 330px;">
    <form class="d-flex flex-column align-items-center">
        <div class="mb-3 w-100">
            <label for="exampleInputEmail1" class="form-label">Cihazın adı</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3 w-100">
            <select class="form-select" aria-label="Default select example">
            <option selected>Cihazın türünü seçiniz</option>
            <option value="1">Dizüstü Bilgisayar</option>
            <option value="2">Masaüstü Bilgisayar</option>
            <option value="3">Mouse</option>
            <option value="4">Klavye</option>
            </select>
        </div>
        <div class="mb-3 w-100">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
