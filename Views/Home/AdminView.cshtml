@model List<itTicketSystem.Models.Tickets>
@{
    Layout = "_Layout";
}
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["Success"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Başarılı!',
                text: '@TempData["Success"]',
                confirmButtonText: 'Tamam',
                timer: 3000,
                timerProgressBar: true
            });
        </script>
    }
}

<div style="max-width: 1800px; margin-left: 2rem;">
    <div class="d-flex flex-wrap" style="gap: 20px; margin-top: 100px; align-items: flex-start;">

        <!-- Kartlar -->
        <div class="flex flex-col gap-4" style="margin-top: 90px; min-width: 200px;">


            <div class="bg-green-500 text-white p-4 rounded-lg shadow-md flex items-center justify-between"
                style="width: 180px; height: 90px;">
                <div>
                    <div class="text-sm">Açık Ticketlar</div>
                    <div class="text-2xl font-bold">@Model.Count(t => t.status == "Açık")</div>
                </div>
                <div class="text-3xl"><i class="fas fa-ticket-alt"></i></div>
            </div>

            <div class="bg-red-600 text-white p-4 rounded-lg shadow-md flex items-center justify-between"
                style="width: 180px; height: 90px;">
                <div>
                    <div class="text-sm">Kapanmış Ticketlar</div>
                    <div class="text-2xl font-bold">@Model.Count(t => t.status == "Kapalı")</div>
                </div>
                <div class="text-3xl"><i class="fas fa-ticket-alt"></i></div>
            </div>

            <div class="bg-yellow-300 text-white p-4 rounded-lg shadow-md flex items-center justify-between"
                style="width: 180px; height: 90px;">
                <div>
                    <div class="text-sm">Bekleyen Ticketlar</div>
                    <div class="text-2xl font-bold">@Model.Count(t => t.status == "Beklemede")</div>
                </div>
                <div class="text-3xl"><i class="fas fa-ticket-alt"></i></div>
            </div>
        </div>

        <!-- Form -->
        <div class="bg-white bg-primary-subtle p-3 shadow" style="width: 300px; height: 460px; border-radius: 15px; overflow: hidden;">
            <form method="post" asp-action="Create" asp-controller="Ticket">
                <div class="mb-1">
                    <label for="Title" class="form-label">Ticket Başlığı</label>
                    <input type="text" class="form-control" id="Title" name="Title" required>
                </div>

                <div class="mb-1">
                    <label for="Description" class="form-label">Açıklama</label>
                    <input type="text" class="form-control" id="Description" name="Description" required>
                </div>

                <div class="mb-1">
                    <label for="Priority" class="form-label">Öncelik</label>
                    <select id="Priority" name="Priority" class="form-select">
                        <option>Düşük</option>
                        <option>Orta</option>
                        <option>Yüksek</option>
                    </select>
                </div>

                <div class="mb-1">
                    <label for="Category" class="form-label">Kategori</label>
                    <select id="Category" name="Category" class="form-select">
                        <option>Donanım</option>
                        <option>Yazılım</option>
                        <option>İnternet</option>
                    </select>
                </div>

                <div class="mb-3">
                    @if (ViewBag.AssignedUsers != null)
                    {
                        <label for="AssignedToUserId" class="form-label">Atanacak Kullanıcı</label>
                        <select id="AssignedToUserId" name="AssignedToUserId" class="form-select" required>
                            <option value="">-- Seçiniz --</option>
                            @foreach (var user in ViewBag.AssignedUsers)
                            {
                                <option value="@user.Value">@user.Text</option>
                            }
                        </select>
                    }
                    else
                    {
                        <p>Kullanıcı listesi yüklenemedi.</p>
                    }
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Oluştur</button>
                </div>
            </form>
        </div>

        <!-- Tablo -->
        <div class="bg-white bg-primary-subtle shadow p-3 flex-grow-1" style="border-radius: 15px; width: 400px;">
            <div class="row">
                <div class="col-12">
                    <h1 class="text-center p-1 rounded">Ticket Listesi</h1>
                </div>
                <div class="col-12">
                    <div style="max-height: 400px; overflow-y: auto; border-radius: 10px;">
                        <table class="table table-striped mb-0" style="font-size:12px;">
                            <thead class="table-dark" style="position: sticky; top: 0; z-index: 1;">
                                <tr>
                                    <th>Id</th>
                                    <th>Başlık</th>
                                    <th>Açıklama</th>
                                    <th>Durum</th>
                                    <th>Öncelik</th>
                                    <th>Kategori</th>
                                    <th>Atanan</th>
                                    <th>Oluşturulma</th>
                                    <th>Kapanma</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var liste in Model)
                                {
                                    <tr>
                                        <td>@liste.id</td>
                                        <td>@liste.title</td>
                                        <td>@liste.description</td>
                                        <td>@liste.status</td>
                                        <td>@liste.priority</td>
                                        <td>@liste.category</td>
                                        <td>@liste.AssignedToUser?.Username</td>
                                        <td>@liste.created_at</td>
                                        <td>@liste.closed_at</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Info-Card -->
    <div class="bg-white text-dark p-4 shadow rounded-lg d-flex flex-column justify-content-between"
     style="max-width: 250px; height: 460px;">
    <div>
        <h5 class="fw-bold mb-2">Bilgilendirme</h5>
        <p style="font-size: 20px;">
            Bu panel üzerinden yeni destek talepleri oluşturabilir, mevcut taleplerin durumlarını izleyebilirsiniz.
        </p>
    </div>
    <div class="mt-auto">
        <i class="fas fa-info-circle fa-2x"></i>
    </div>
</div>


    </div>
</div>
